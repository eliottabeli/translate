{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StyleGuide",
  "type": "object",
  "additionalProperties": false,
  "required": ["register", "context", "conventions"],
  "properties": {
    "register": {"type": "string", "minLength": 3},
    "context": {"type": "string", "minLength": 3},
    "conventions": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 3}
    },
    "preferences": {
      "type": "array",
      "minItems": 0,
      "items": {"type": "string", "minLength": 3},
      "default": []
    }
  }
}
