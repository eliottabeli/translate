{
  "paths": {
    "raw_html": "data/raw/document.html",
    "raw_images_dir": "data/raw/images",
    "segments_json": "data/segments/segments.json",
    "segments_meta_json": "data/segments/segments_meta.json",
    "images_ocr_json": "data/segments/images_ocr.json",
    "term_candidates_json": "data/segments/term_candidates.json",
    "glossary_json": "data/segments/glossary.json",
    "glossary_draft_json": "data/segments/glossary_draft.json",
    "glossary_proposals_json": "data/segments/glossary_proposals.json",
    "translations_json": "data/translations/segments_translated.json",
    "translations_v2_json": "data/translations/segments_translated_v2.json",
    "translations_consistency_json": "data/translations/segments_translated_consistency.json",
    "translation_memory": "data/translations/translation_memory.jsonl",
    "exports_dir": "data/exports",
    "logs_dir": "logs",
    "style_guide": "style_guide.json",
    "style_guide_default": "style_guide.default.json",
    "style_guide_schema": "style_guide.schema.json",
    "terminology_report": "data/qa/terminology_report.json",
    "terminology_corrections": "data/qa/terminology_corrections.json",
    "register_report": "data/qa/register_report.json",
    "evaluation_report": "logs/evaluation.json",
    "audit_report": "logs/audit.json"
  },
  "segmentation": {
    "block_tags": [
      "p",
      "h1",
      "h2",
      "h3",
      "li",
      "figcaption",
      "blockquote"
    ],
    "include_empty": false
  },
  "ocr": {
    "enabled": false,
    "lang": "eng",
    "tesseract_cmd": "",
    "only_if_filename_matches": ""
  },
  "glossary": {
    "enabled": true,
    "top_n": 400,
    "draft_top_n": 250,
    "min_len": 3,
    "stopwords_lang": "english",
    "proposals": {
      "enabled": true,
      "top_n": 300,
      "k": 3
    }
  },
  "translation": {
    "enabled": true,
    "source_lang": "EN",
    "target_lang": "FR",
    "provider": "openai",
    "parallel_workers": 2,
    "structure_guard": {
      "enabled": true
    },
    "scheduling": {
      "requests_per_minute": 60,
      "max_retries": 2,
      "retry_backoff_seconds": 2.0
    },
    "translation_memory": {
      "path": "data/translations/translation_memory.jsonl",
      "max_segments": 5000,
      "max_terms": 400,
      "fuzzy_threshold": 0.86
    },
    "safety": {
      "mask_numbers_dates": true
    },
    "openai": {
      "model": "gpt-4.1-mini",
      "temperature": 0.1,
      "max_output_tokens": 2000
    },
    "deepl": {
      "formality": "more",
      "preserve_formatting": true
    },
    "chunking": {
      "max_chars_per_chunk": 9000,
      "max_segments_per_chunk": 8,
      "context_window": 1
    }
  },
  "revision": {
    "enabled": true,
    "provider": "openai",
    "parallel_workers": 2,
    "structure_guard": {
      "enabled": true
    },
    "scheduling": {
      "requests_per_minute": 60,
      "max_retries": 2,
      "retry_backoff_seconds": 2.0
    },
    "safety": {
      "mask_numbers_dates": true
    },
    "openai": {
      "model": "gpt-4.1-mini",
      "temperature": 0.1,
      "max_output_tokens": 2000
    },
    "context_window": 1
  },
  "consistency": {
    "enabled": true,
    "parallel_workers": 2,
    "context_window": 1,
    "structure_guard": {
      "enabled": true
    },
    "scheduling": {
      "requests_per_minute": 60,
      "max_retries": 2,
      "retry_backoff_seconds": 2.0
    },
    "safety": {
      "mask_numbers_dates": true
    },
    "openai": {
      "model": "gpt-4.1-mini",
      "temperature": 0.1,
      "max_output_tokens": 2000
    }
  },
  "pipeline": {
    "resume": true
  },
  "postproc": {
    "apply_glossary": true,
    "verify_html_structure": true,
    "verify_attributes": true,
    "verify_numbers_dates": true
  },
  "qa": {
    "enabled": false,
    "back_translation": false,
    "min_difflib_ratio": 0.65,
    "terminology_report": true,
    "auto_correct_terminology": true,
    "register_report": true
  },
  "evaluation": {
    "enabled": true,
    "min_chars": 240,
    "max_samples": 20,
    "backtranslation_model": "gpt-4.1-mini",
    "comet_model": "Unbabel/wmt22-cometkiwi-da"
  }
}
